{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2016",
    "module": "CommonJS",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@app/*": ["src/*"]
    }
  },

  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
